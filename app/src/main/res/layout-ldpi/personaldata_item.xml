<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:padding="15dp"
        android:id="@+id/personaldata_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头衔"
            android:textSize="18sp"
            android:textColor="@color/gray_deep"
            android:gravity="center_vertical"
            android:id="@+id/personaldata_name"/>
        <TextView
            android:gravity="right|center_vertical"
            android:text="注册会员"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/status_color"
            android:textSize="18sp"
            android:id="@+id/personaldata_value"/>
        <ImageView
            android:id="@+id/personal_image"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/personaldatainto"/>
    </LinearLayout>
    <View
        android:layout_marginLeft="25dp"
        android:id="@+id/data_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"></View>
    <ImageView
        android:id="@+id/personaldata_image"
        android:clickable="false"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/gray"
        ></ImageView>


</LinearLayout>