<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp">
    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_margin="10dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/person"
        app:riv_corner_radius="20dip"
        app:riv_mutate_background="true"
        app:riv_tile_mode="repeat"
        android:id="@+id/friendlist_image"
        app:riv_oval="true" />
    <TextView
        android:layout_toRightOf="@id/friendlist_image"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:text="User1"
        android:textColor="@color/status_color"
        android:id="@+id/friendlist_name"/>
    <TextView
        android:gravity="center"
        android:id="@+id/friendlist_tv"
        android:layout_margin="20dp"
        android:layout_centerVertical="true"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:textColor="@color/main_title"
        android:textSize="24sp"
        android:text="@string/accept"
        android:background="@drawable/person_gold"
        android:layout_alignParentRight="true"/>
    <View
        android:layout_marginLeft="15dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"></View>

</RelativeLayout>