<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_margin="20dp">
   <TextView
       android:gravity="center"
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:textSize="@dimen/textSize_title"
       android:textColor="@color/main_rb_text"
       android:background="@drawable/photo_selected"
       android:id="@+id/photo_camera"
       android:text="@string/photo_dialog"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_height="0.5dp"
        android:background="#DAD9DB" />
    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="@dimen/textSize_title"
        android:textColor="@color/main_rb_text"
        android:background="@drawable/photo_selected"
        android:id="@+id/photo_selected"
        android:layout_marginBottom="10dp"
        android:text="@string/photo_dialog_select"/>
    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="@dimen/textSize_title"
        android:textColor="@color/main_rb_text"
        android:background="@drawable/photo_selected"
        android:id="@+id/photo_cancel"
        android:text="@string/photo_dialog_cancel"/>

</LinearLayout>