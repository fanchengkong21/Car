<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bind_delarer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.kfc.productcar.ui.person.BindDelarerActivity">
    <include
        layout="@layout/activity_title_personin"
        android:id="@+id/binding_title"></include>

    <LinearLayout
        android:layout_below="@id/binding_title"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >
        <RelativeLayout
            android:layout_margin="30dp"
            android:layout_width="match_parent"
            android:background="@drawable/binding"
            android:orientation="horizontal"
            android:layout_height="60dp">
            <EditText
                android:id="@+id/bind_edt"
                android:background="@null"
                android:paddingRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingLeft="20dp"
                android:textSize="25sp"
                android:hint="@string/middle_invitation"/>

            <ImageView
                android:id="@+id/bind_image"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@mipmap/reg_qrcode"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"/>
            <View
                android:layout_alignLeft="@id/bind_image"
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:background="@color/status_color"></View>
        </RelativeLayout>

        <Button
            android:id="@+id/bind_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="30dp"
            android:text="@string/bindingcode"
            android:textSize="25sp"
            android:background="@drawable/binding"/>
    </LinearLayout>

</RelativeLayout>
